# AntiGoogle Configuration
# Copy to .env and modify as needed

# AntiGoogle Configuration

# --- DOCKER NETWORKING FIXES ---
# In Docker, use service names ('db', 'redis') instead of 'localhost'
DATABASE_URL=postgresql+asyncpg://antigoogle:antigoogle@db:5432/antigoogle
REDIS_URL=redis://redis:6379/0

# Database Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
CACHE_TTL=300

# Security (Required)
# Generate a real random string for production: openssl rand -hex 32
SECRET_KEY=change_this_to_a_random_string_for_security

# Embedding Model
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBED_DIM=384
STORED_DIM=64

# Search Settings
TOP_N=20
BM25_WEIGHT=0.35
SEMANTIC_WEIGHT=0.65

# Quality Thresholds
MIN_QUALITY=0.3
SLOP_THRESHOLD=0.5
SPAM_THRESHOLD=0.7
MIN_CONTENT_LENGTH=500

# Crawler Settings
CRAWL_BATCH_SIZE=50
CRAWL_DELAY=0.5
CRAWL_TIMEOUT=12
MAX_OUTLINKS=25
USER_AGENT=AntiGoogle/2.0 (https://antigoogle.dev)

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Proof of Work
BASE_POW_DIFFICULTY=4
MAX_POW_DIFFICULTY=7

# --- SWARM SETTINGS ---
NOSTR_ENABLED=true
